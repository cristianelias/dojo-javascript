{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "test",
          "program": "${workspaceFolder}/javascript/node_modules/.bin/_mocha",
          "cwd": "${workspaceFolder}/javascript",
          "stopOnEntry": false,            
          "args": [
              "--require",
              "babel-register",
              "--require",
              "babel-polyfill",
              "tests/**/*spec.js"
          ],
          "skipFiles": [
            "${workspaceRoot}/node_modules/**/*.js",
            "<node_internals>/**/*.js"
          ],
          "runtimeExecutable": null,
          "env": {
              "NODE_ENV": "test"
          },
          "sourceMaps": true
      }
  ]
}